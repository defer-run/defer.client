{
  "name": "@defer/client",
  "version": "1.10.0",
  "description": "Zero infrastructure NodeJS background jobs",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "git@github.com:defer-run/defer.client.git",
  "author": "Defer Inc <support@defer.run>",
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "node utils/update-version.mjs && npx bob build && node utils/fix-ts-sub-exports.mjs",
    "lint": "eslint src/**/*.ts",
    "prerelease": "npm run build",
    "release": "changeset publish",
    "test": "npx jest --passWithNoTests --config ./tests/jest.ts --runInBand --filter=./tests/filter-tests-node-18.cjs",
    "test:dev": "npx jest --passWithNoTests --config ./tests/jest.ts --runInBand --watch"
  },
  "dependencies": {
    "@whatwg-node/fetch": "^0.9.12",
    "parse-duration": "^1.1.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.2.3",
    "@types/react": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "bob-the-bundler": "^7.0.1",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "jest": "^29.6",
    "prettier": "^2.8.0",
    "next": "^13.4.7",
    "react": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2"
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./next": {
      "require": {
        "types": "./dist/typings/next/index.d.cts",
        "default": "./dist/cjs/next/index.js"
      },
      "import": {
        "types": "./dist/typings/next/index.d.ts",
        "default": "./dist/esm/next/index.js"
      },
      "default": {
        "types": "./dist/typings/next/index.d.ts",
        "default": "./dist/esm/next/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "index": [
        "typings/index.d.ts"
      ],
      "next": [
        "typings/next/index.d.ts"
      ]
    }
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "eslintConfig": {
    "root": true,
    "reportUnusedDisableDirectives": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "/tests/",
      "node_modules/",
      "coverage/",
      "dist/",
      "package-lock.json"
    ],
    "overrides": [
      {
        "files": "*.{js,ts,jsx,tsx,cjs,cts,mjs,mts,cjsx,ctsx,mjsx,mtsx}",
        "parser": "@typescript-eslint/parser",
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ],
        "rules": {
          "@typescript-eslint/ban-types": 1,
          "@typescript-eslint/no-explicit-any": 0
        }
      }
    ]
  }
}
