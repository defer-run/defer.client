{
  "name": "@defer/client",
  "version": "1.10.0",
  "description": "Zero infrastructure NodeJS background jobs",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "git@github.com:defer-run/defer.client.git",
  "author": "Defer Inc <support@defer.run>",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "parse-duration": "^1.0.2"
  },
  "scripts": {
    "build": "node utils/update-version.mjs && bob build && node utils/fix-ts-sub-exports.mjs",
    "lint": "eslint src/**/*.ts",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest --passWithNoTests --config ./tests/jest.ts --runInBand --filter=./tests/filter-tests-node-18.cjs",
    "test:dev": "jest --passWithNoTests --config ./tests/jest.ts --runInBand --watch"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.24.2",
    "@types/jest": "^29.2.3",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "bob-the-bundler": "^4.0.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "^29.3.1",
    "next": "^13.4.7",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1"
  },
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./next": {
      "require": {
        "types": "./dist/typings/next/index.d.cts",
        "default": "./dist/cjs/next/index.js"
      },
      "import": {
        "types": "./dist/typings/next/index.d.ts",
        "default": "./dist/esm/next/index.js"
      },
      "default": {
        "types": "./dist/typings/next/index.d.ts",
        "default": "./dist/esm/next/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "index": [
        "typings/index.d.ts"
      ],
      "next": [
        "typings/next/index.d.ts"
      ]
    }
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  }
}
