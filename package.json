{
  "name": "@defer.run/client",
  "version": "0.5.0",
  "description": "Zero infrastructure NodeJS background jobs",
  "main": "dist/cjs/index.js",
  "repository": "git@github.com:defer-run/defer.client.git",
  "author": "Defer Inc <support@defer.run>",
  "license": "MIT",
  "dependencies": {
    "@darkeyedevelopers/natural-cron.js": "^1.1.0",
    "@whatwg-node/fetch": "^0.2.9",
    "parse-duration": "^1.0.2"
  },
  "scripts": {
    "build": "bob build  --single",
    "lint": "eslint src/**/*.ts",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest --passWithNoTests --config ./tests/jest.ts --runInBand",
    "test:dev": "jest --passWithNoTests --config ./tests/jest.ts --runInBand --watch"
  },
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.24.2",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "bob-the-bundler": "^4.0.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "type": "module",
  "module": "dist/esm/index.js",
  "typings": "dist/typings/index.d.ts",
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  }
}
